!macro unix2dos outpath my_file
	SetOutPath ${outpath}
	${GetFileName} ${my_file} $R0
	File ${my_file}
	Push $R0
	Push "temp.file" 
	Call _unix2dos
	Rename "temp.file" $R0
!macroend

